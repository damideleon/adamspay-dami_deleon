<div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Pedido</span>
          <span class="badge bg-primary rounded-pill">1</span>
        </h4>
        <ul class="list-group mb-3" >
          <li class="list-group-item d-flex justify-content-between lh-sm" data-producto_id="{{producto_id}}">
            <div>
              <h6 class="my-0">{{producto_descripcion}}</h6>
              <small class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</small>
            </div>
            <span class="text-muted">{{producto_precio}}</span>
          </li>
        </ul>
      </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Billing address</h4>
        <form class="needs-validation" novalidate="">
          <div class="row g-3">
            <div class="col-sm-12">
              <label for="cliente_nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="cliente_nombre" name="cliente_nombre" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>
            <div class="col-12">
              <label for="cliente_user" class="form-label">Username</label>
              <div class="input-group has-validation">
                <span class="input-group-text">@</span>
                <input type="text" class="form-control" id="cliente_user" name="cliente_user" placeholder="Username" required="">
              <div class="invalid-feedback">
                  Your username is required.
                </div>
              </div>
            </div>
            <div class="col-sm-12">
              <label for="cliente_password" class="form-label">Contrase√±a</label>
              <input type="password" class="form-control" id="cliente_password" name="cliente_password" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid password is required
              </div>
            </div>

            <div class="col-12">
              <label for="cliente_mail" class="form-label">Email <span class="text-muted">(Optional)</span></label>
              <input type="cliente_mail" name="cliente_mail" class="form-control" id="email" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-6">
              <label for="address" class="form-label">Celular</label>
              <input type="tel" class="form-control" id="address" placeholder="1234 Main St" required="">
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>

            <div class="col-6">
              <label for="address" class="form-label">Fecha de nacimiento</label>
              <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>
          <hr class="my-4">
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="same-address">
            <label class="form-check-label" for="same-address">Shipping address is the same as my billing address</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="save-info">
            <label class="form-check-label" for="save-info">Save this information for next time</label>
          </div>
          <hr class="my-4">
          <button class="w-100 btn btn-primary btn-lg" type="submit">Procesar pago</button>
        </form>
      </div>
    </div>