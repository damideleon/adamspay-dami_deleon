<div class="container p-3 bg-light my-3 rounded">
    <div class="row g-5 p-5">
        <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Pedido</span>
                <span class="badge bg-primary rounded-pill">1</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item" data-producto_id="{{producto_id}}">
                    <div class="d-flex justify-content-between lh-sm">
                        <h6 class="my-0">{{producto_descripcion}}</h6>
                        <span class="text-muted">{{precio_fmt}}</span>
                    </div>
                    <small class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</small>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (GS.)</span>
                    <strong>{{precio_fmt}}</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Formulario de pago</h4>
            <form class="needs-validation" method="post" action="/pagos/plan-{{producto_id}}">
                <div class="row g-3">
                    <div class="col-sm-12">
                        <label for="cliente_nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="cliente_nombre" name="cliente_nombre" placeholder=""
                            value="" required="">
                        <div class="invalid-feedback">
                            Favor ingrese un nombre
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="cliente_user" class="form-label">Username</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text">@</span>
                            <input type="text" class="form-control" id="cliente_user" name="cliente_user"
                                placeholder="Username" required="">
                            <div class="invalid-feedback">
                                Favor ingrese un username
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label for="cliente_password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="cliente_password" name="cliente_password"
                            placeholder="" value="" required="">
                        <div class="invalid-feedback">
                            Favor ingrese una contraseña
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="cliente_mail" class="form-label">Email</label>
                        <input type="cliente_mail" name="cliente_mail" class="form-control" id="email"
                            placeholder="you@example.com" required>
                        <div class="invalid-feedback">
                            Un e-mail válido es escencial
                        </div>
                    </div>

                    <div class="col-6">
                        <label for="address" class="form-label">Celular</label>
                        <input type="tel" class="form-control" id="cliente_celular" name="cliente_celular"
                            placeholder="(0981) 123 456" required="">
                        <div class="invalid-feedback">
                            Celular para que podamos contactarnos con usted
                        </div>
                    </div>

                    <div class="col-6">
                        <label for="cliente_fechanacimiento" class="form-label">Fecha de nacimiento</label>
                        <input type="date" class="form-control" name="cliente_fechanacimiento" id="cliente_fechanacimiento" required="">
                        <div class="invalid-feedback">
                            Para brindar mejores beneficios
                        </div>
                    </div>
                    <hr class="mt-4">
                    <p>
                        El pago se procesa de forma segura a través de AdamsPay
                    </p>
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Procesar pago</button>
            </form>
        </div>
    </div>
</div>